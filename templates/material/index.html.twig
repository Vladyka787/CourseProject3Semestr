{% extends 'base.html.twig' %}

{% block title %}Material index{% endblock %}

{% block body %}
    <h1>Material index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>MaterialName</th>
                <th>MaterialPrice</th>
                <th>MaterialDescription</th>
                <th>MaterialAmount</th>
                <th>MaterialMeasure</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for material in materials %}
            <tr>
                <td>{{ material.id }}</td>
                <td>{{ material.MaterialName }}</td>
                <td>{{ material.MaterialPrice }}</td>
                <td>{{ material.MaterialDescription }}</td>
                <td>{{ material.MaterialAmount }}</td>
                <td>{{ material.MaterialMeasure }}</td>
                <td>
                    <a href="{{ path('app_material_show', {'id': material.id}) }}">show</a>
                    <a href="{{ path('app_material_edit', {'id': material.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_material_new') }}">Create new</a>
{% endblock %}
