{% extends 'base.html.twig' %}

{% block title %}{{ client.customerMiddleName }} {{ client.customerFirstName }} {{ client.customerLastName }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>{{ client.customerMiddleName }} {{ client.customerFirstName }} {{ client.customerLastName }}</h1>

        <p>Телефон: {{ client.customerPhone }}</p>
        <h3>Заказы:</h3>
        {% for custom in customs %}
            <p>
                <a href="{{ path('app_custom_show', {'id': custom.id}) }}">{{ custom.carInformation }}</a>
            </p>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}

        <p style="margin-bottom: 1em; margin-top: 1em;">
            <a href="{{ path('app_client_index') }}" class="btn btn-outline-primary">К списку клиентов</a>

            <a href="{{ path('app_client_edit', {'id': client.id}) }}"
               class="btn btn-outline-secondary">Редактировать</a>

            <a href="{{ path('app_custom_new', {'client_id': client.id}) }}"
               class="btn btn-outline-success" role="button">Добавить заказ</a>
        </p>
        {{ include('client/_delete_form.html.twig') }}
    </div>
{% endblock %}
